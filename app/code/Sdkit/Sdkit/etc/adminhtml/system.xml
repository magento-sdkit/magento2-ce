<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="sdkit" translate="label" sortOrder="1000">
            <label>Sdkit</label>
        </tab>
        <section id="sdkit" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1">
