                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sample_text" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1">
                    <label>Sample Text</label>
                </field>
                <field id="sample_textarea" translate="label" type="textarea" sortOrder="10" showInDefault="1" showInWebsite="1">
                    <label>Sample TextArea</label>
                </field>
            </group>
        </section>
    </system>
</config>
